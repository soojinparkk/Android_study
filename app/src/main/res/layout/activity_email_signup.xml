<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D3C1C1"
    tools:context=".EmailSignupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:textSize="70dp"
        android:textColor="#5C4E4E"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/username_inputBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="ID 입력해주세요"
            android:textSize="23dp"
            android:layout_marginBottom="35dp"/>

        <EditText
            android:id="@+id/password1_inputBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="PASSWORD 입력해주세요"
            android:inputType="textPassword"
            android:textSize="23dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/password2_inputBox"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="PASSWORD 다시 입력해주세요"
            android:inputType="textPassword"
            android:textSize="23dp"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/signup_Btn"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="SIGN UP"
            android:textSize="20dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/login_Btn"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="LOGIN"
            android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>