<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D3C1C1"
    tools:context=".PostListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/post_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/menu_allList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="All"
        android:textSize="20dp"
        android:textColor="#5C4E4E"
        android:gravity="center"/>

    <TextView
        android:id="@+id/menu_myList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="My List"
        android:textSize="20dp"
        android:textColor="#5C4E4E"
        android:gravity="center"/>

    <TextView
        android:id="@+id/menu_upload"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Upload"
        android:textSize="20dp"
        android:textColor="#5C4E4E"
        android:gravity="center"/>

    <TextView
        android:id="@+id/menu_myInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="My Info"
        android:textSize="20dp"
        android:textColor="#5C4E4E"
        android:gravity="center"/>

</LinearLayout>

</LinearLayout>